<% layout('../_layout'); %>
<div class="panel">
  <div class="ui-tool">
    <ul>
      <li><a href="/eccategory/new">Ajouter une catégorie</a></li>
      <div class="clear"></div>
    </ul>
  </div>
</div>
<div class="space10"></div>
<div class="ui-block">
  <div class="ui-block-title"><h5>Liste des catégories de produit</h5></div>
  <div class="ui-block-content">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Position</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if( categories.length ){ %>
          <% categories.forEach(function(category){ %>
          <tr>
            <td><%-category.name%> (<%=category.EcProducts.length%>)</td>
            <td><%-category.position%></td>
            <td>
              <a href="/eccategory/delete/<%- category.id %>">Supprimer</a>
            </td>
          </tr>
          <% }); %>
          <%}else{ %>
          <tr><td><p class="danger" style="text-align: left;">Aucune catégorie.</p></td><td></td><td></td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
