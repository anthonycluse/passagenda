<% layout('../_layout'); %>
<div class="grid-12">
  <div class="panel">
    <div class="ui-tool">
      <ul>
        <li><a href="/offercategory/_index">Liste des catégories</a></li>
        <li><a href="/offercategory/new">Ajouter une catégorie</a></li>
        <div class="clear"></div>
      </ul>
    </div>
  </div>
</div>
<div class="clear"></div>
<div class="space10"></div>
<div class="grid-12">
  <div class="ui-block">
    <div class="ui-block-title"><h5>Liste des catégories</h5></div>
    <div class="ui-block-content">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if( offercategories.length ){ %>
            <% offercategories.forEach(function(offercategory){ %>
            <tr>
              <td><%=offercategory.name%></td>
              <td>
                <a href="/offercategory/delete/<%=offercategory.id%>">Supprimer</a>
              </td>
            </tr>
            <% }); %>
            <% }else{ %>
            <tr><td><p class="danger" style="text-align: left;">Aucune catégorie</p><td></td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="clear"></div>
