<% layout('../_layout'); %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Ajout d'un client</h5></div>
  <div class="ui-block-content">
    <form action="/eccustomer/create" method="post" class="form">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <div class="form-group">
        <label for="firstname">Prénom</label>
        <input type="firstname" class="form-control" id="firstname" name="customer[firstname]" required placeholder="Prénom utilisateur">
      </div>
      <div class="form-group">
        <label for="lastname">Nom</label>
        <input type="lastname" class="form-control" id="lastname" name="customer[lastname]" required placeholder="Nom utilisateur">
      </div>
      <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" id="email" name="customer[email]" required placeholder="Nom utilisateur">
      </div>
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" class="form-control" id="password" name="customer[password]" required placeholder="Mot de passe">
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirmez votre mot de passe</label>
        <input type="password" class="form-control" id="confirmPassword" name="customer[confirmPassword]" required placeholder="Confirmation du mot de passe">
      </div>
      <div class="form-group">
        <label for="address">Adresse</label>
        <input type="address" class="form-control" id="address" name="customer[address]" required placeholder="Adresse">
      </div>
      <div class="form-group">
        <label for="complementary_address">Adresse complémentaire</label>
        <input type="complementary_address" class="form-control" id="complementary_address" name="customer[complementary_address]" required placeholder="Adresse complémentaire">
      </div>
      <div class="form-group">
        <label for="postal_code">Code postale</label>
        <input type="postal_code" class="form-control" id="postal_code" name="customer[postal_code]" required placeholder="Code postale">
      </div>
      <div class="form-group">
        <label for="city">Ville</label>
        <input type="city" class="form-control" id="city" name="customer[city]" required placeholder="Ville">
      </div>
      <div class="form-group">
        <label for="country">Pays</label>
        <select name="customer[country]" id="country" class="form-control">
          <option value="France">France</option>
        </select>
      </div>
      <input type="submit" value="Enregistrer" class="btn btn-default"/>
      <div class="clear"></div>
    </form>
  </div>
</div>
