<% layout('../_layout') %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Modification du client "<%-customer.firstname%> <%=customer.lastname%>"</h5></div>
  <div class="ui-block-content">
    <form action="/eccustomer/update" method="post" class="form">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <input type="hidden" name="customer[id]" value="<%=customer.id%>">
      <div class="form-group">
        <label for="firstname">Prénom</label>
        <input type="firstname" class="form-control" id="firstname" name="customer[firstname]" required placeholder="Prénom utilisateur" value="<%=customer.firstname%>">
      </div>
      <div class="form-group">
        <label for="lastname">Nom</label>
        <input type="lastname" class="form-control" id="lastname" name="customer[lastname]" required placeholder="Nom utilisateur" value="<%=customer.lastname%>">
      </div>
      <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" id="email" name="customer[email]" required placeholder="Nom utilisateur" value="<%=customer.email%>">
      </div>
      <div class="form-group">
        <label for="address">Adresse</label>
        <input type="address" class="form-control" id="address" name="customer[address]" required placeholder="Adresse" value="<%=customer.address%>">
      </div>
      <div class="form-group">
        <label for="complementary_address">Adresse complémentaire</label>
        <input type="complementary_address" class="form-control" id="complementary_address" name="customer[complementary_address]" required placeholder="Adresse complémentaire" value="<%=customer.complementary_address%>">
      </div>
      <div class="form-group">
        <label for="postal_code">Code postale</label>
        <input type="postal_code" class="form-control" id="postal_code" name="customer[postal_code]" required placeholder="Code postale" value="<%=customer.postal_code%>">
      </div>
      <div class="form-group">
        <label for="city">Ville</label>
        <input type="city" class="form-control" id="city" name="customer[city]" required placeholder="Ville" value="<%=customer.city%>">
      </div>
      <div class="form-group">
        <label for="country">Pays</label>
        <select name="customer[country]" id="country" class="form-control">
          <option value="<%=customer.country%>"><%=customer.country%></option>
          <option value="France">France</option>
        </select>
      </div>
      <input type="submit" value="Enregistrer" class="btn btn-default"/>
      <div class="clear"></div>
    </form>
  </div>
</div>
