<% layout('../_layout'); %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Suppression de "<%-user.username%>"</h5></div>
  <div class="ui-block-content">
    <p>Voulez vous vraiment supprimer l'utilisateur "<%-user.username%>" ?</p>
    <form action="/user/destroy" method="post" class="form">
      <input type="hidden" name="_csrf" value="<%-csrfToken%>">
      <input type="hidden" name="id" value="<%-user.id%>">
      <input type="submit" class="btn" value="Oui le supprimer">
      <div class="clear"></div>
    </form>
  </div>
</div>
