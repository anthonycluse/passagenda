<% layout('../_layout'); %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Paramètres du référencement</h5></div>
  <div class="ui-block-content">
    <form action="/option/seo/update" class="form" method="post">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <div class="form-group">
        <label for="title">Titre</label>
        <input type="text" class="form-control" name="options[title]" placeholder="Titre de l'application" value="<%-options.title%>">
        <p class="help-block">"Title" pour le référencement</p>
      </div>
      <div class="form-group">
        <label for="title">Description</label>
        <input type="text" class="form-control" name="options[description]" placeholder="Description de l'application" value="<%-options.description%>">
        <p class="help-block">Meta description pour le référencement</p>
      </div>
      <div class="form-group">
        <label for="title">Mots-clés (séparé par des ";")</label>
        <input type="text" class="form-control" name="options[keywords]" placeholder="Mots-clés de l'application" value="<%-options.keywords%>">
        <p class="help-block">Meta keywords pour le référencement</p>
      </div>
      <div class="form-group">
        <label for="idga">ID de suivie Google Analytics</label>
        <input type="text" class="form-control" name="options[idga]" id="idga" placeholder="ID de suivie Google Analytics" value="<%-options.idga%>">
        <p class="help-block">Vous trouverez votre ID dans l'interface Google Analytics</p>
      </div>
      <input type="submit" value="Enregistrer" class="btn">
      <div class="clear"></div>
    </form>
  </div>
</div>
