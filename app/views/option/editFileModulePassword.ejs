<% layout('../_layout'); %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Changement du mot de passe du module Téléchargement</h5></div>
  <div class="ui-block-content">
    <form action="/option/file/update" class="form" method="post">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <div class="form-group">
        <label for="password">Votre nouveau mot de passe</label>
        <input type="password" class="form-control" id="password" name="options[password]" placeholder="Votre nouveau mot de passe" required autofocus>
      </div>
      <div class="form-group">
        <label for="confirm_password">Confirmation du mot de passe</label>
        <input type="password" class="form-control" id="confirm_password" name="options[confirm_password]" placeholder="Confirmation de votre mot de passe" required>
      </div>
      <input type="submit" value="Enregistrer" class="btn">
      <div class="clear"></div>
    </form>
  </div>
</div>
