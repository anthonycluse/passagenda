<% layout('../_layout') %>
<div class="ui-block">
  <div class="ui-block-title"><h5>Ajout d'une catégorie de rendez-vous</h5></div>
  <div class="ui-block-content">
    <form action="/event/category/create" method="POST" class="form">
      <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      <div class="form-group">
        <label for="name" class="control-label">Nom de la catégorie</label>
        <input type="text" id="name" name="category[name]" class="form-control" placeholder="Nom de la catégorie">
      </div>
      <div class="form-group">
        <label for="color">Couleur de la catégorie</label>
        <select name="category[color]" id="color" class="form-control">
          <option value="red">Rouge</option>
          <option value="yellow">Jaune</option>
          <option value="blue">Bleue</option>
          <option value="green">Vert</option>
        </select>
      </div>
      <input type="submit" class="btn btn-default" value="Ajouter">
      <a href="/appointment/category" class="btn">Retour à la liste des catégories</a>
      <div class="clear"></div>
    </form>
  </div>
</div>
